datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  username          String              @unique
  password          String
  name              String
  role              Role                @default(user)
  token             String?
  attendance_logs   AttendanceLog[]
  refresh_tokens    RefreshToken[]
}

model AttendanceLog {
  @@map("attendance_logs")

  id        Int       @id @default(autoincrement())
  user_id   Int       
  record    DateTime  @default(now())
  category  Category
  status    Status  
  user      User      @relation(fields: [user_id], references: [id])
}

model RefreshToken {
  @@map("refresh_tokens")

  id          Int       @id @default(autoincrement())
  user_id     Int
  refresh     String    @unique
  expires_at  DateTime
  revoked     Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  user        User      @relation(fields: [user_id], references: [id])
}

enum Role {
  admin
  user
}

enum Category {
  checkin
  checkout
}

enum Status {
  early
  late
  ontime
}